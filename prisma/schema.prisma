generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BetaSignup {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  interest  String   // Marine, Home, Business, Content creation, Cooking, Other
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("beta_signups")
}